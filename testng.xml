<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="true">

    <!-- Run specific classes from the 'tests' package -->
    <test name="AllTestsFromTestsPackage">
        <classes>
            <class name="tests.RegisterTest" />
            <class name="tests.ComponentTest" />
        </classes>
    </test>

    <!-- Run LoginTest class but exclude a specific method -->
    <test name="LoginTestOnly">
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <exclude name="LoginTestP" />
                </methods>
            </class>
        </classes>
    </test>

</suite>
